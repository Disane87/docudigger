    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "autoAttachChildProcesses": true,
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console" : "integratedTerminal",
            "program": "${workspaceFolder}\\src\\app.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}